{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        {% for school in schools %}
            <div class="school school-{{ loop.index % 3 }}">
                <a href="{{ path('wcs_cantine_todayList', {'schoolId': school.id}) }}">
                    <button class="col-sm-offset-4 col-md-offset-4">
                        <i class="fa fa-home fa-2x"></i>
                        {{ school.name }}
                    </button>
                </a>
            </div>
        {% endfor %}
        <div class="commande">
            <a href="{{ path('reserve_meal') }}">
                <button class="col-sm-offset-4 col-md-offset-4">
                    <i class="fa fa-cutlery fa-2x"></i>
                    Commande des repas
                </button>
            </a>
        </div>
    </div>

{% endblock %}

{% block footer %}{% endblock %}
