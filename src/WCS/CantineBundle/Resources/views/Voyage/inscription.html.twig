{% extends '::base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% block retour %}
        <a href="{{ path('wcs_cantine_dashboard') }}">Retour</a>
    {% endblock %}


    <div class='container' role='main' xmlns="http://www.w3.org/1999/html">
        <center><h1>Voyages scolaires</h1></center>
        <center>
            <h4>
                Inscription de mon enfant
            </h4>
        </center>
        <hr>



        <div class="col-md-12">
            <h3 class="titre">{{eleve }}</h3>

                <strong>Né(e) le:</strong> {{ eleve.dateDeNaissance | date('d/m/Y') }}</br>
                <strong>Classe/Ecole: </strong> {{ eleve.division }}</br>
        </div>

        {# ------------------------Liste des Voyages------------------------- #}
        <div class="col-md-12">
            <h3>Les voyages scolaires (2015-2016)</h3>
            <div class="form-group">
                <blockquote>
                    {% for voyage in voyages %}
                        <input type="checkbox"/> {{ voyage }}</br>
                    {% endfor %}
                </blockquote>
            </div>
        </div>

      {# ------------------------Formulaire de piece jointe--------------------------------------- #}
      <div class="col-md-12">
            <h3>Veuillez joindre la pièce suivante</h3>
        <div class="form-group">
            <label class="control-label" for="application_sonata_user_profile_file_prestations">Votre dernier avis d'imposition :</label>
            <input type="file"     id="application_sonata_user_profile_file_prestations" name="application_sonata_user_profile[file_prestations]">
            <blockquote>Seules les images ou les fichiers .pdf sont acceptés.</blockquote>
        </div>
      </div>
      {#-------------------------Fin Formulaire de pice jointe--------------------------------------#}

      {#----------------------------------Signatures et validation-------------------------#}
    <div class="col-md-12">
        <h3>Signatures</h3>
        <div class="form-group">
            <input type="checkbox"/>
            <label for="autorise" style="display:inline">J'autorise le responsable du voyage scolaire ou son représentant à prendre toutes mesures d'urgence nécessaires en cas d'accident survenant à mon enfant *</label>
            <blockquote>
                A savoir :
                <ul>
                    <li>appel du S.A.M.U</li>
                    <li>transfert à l'hôpital (ou à la clinique) le (la) plus proche</li>
                </ul>
            </blockquote>
        </div>


        <div class="form-group">
            <input type="checkbox" />
            <label for="atteste" style="display:inline">Je certifie sur l’honneur l’exactitude de tous les renseignements saisis sur cette application concernant mon enfant ainsi que mon foyer *</label>
        </div>


        <div class="col-md-12">
            <h6 id="champs">* champs obligatoire</h6><br>
            <input type="submit" name="commit" value="Inscrire mon enfant" class="btn btn-primary btn-lg btn-block">
        </div>
    </div>

    </div>
    </form>
    </div>
{% endblock %}




