{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Feries list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Annee</th>
                <th>Paques</th>
                <th>Ascension</th>
                <th>Pentecote</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('feries_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.annee %}{{ entity.annee|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.paques %}{{ entity.paques|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.ascension %}{{ entity.ascension|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.pentecote %}{{ entity.pentecote|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('feries_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('feries_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('feries_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
