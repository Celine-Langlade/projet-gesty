{% extends 'WCSCantineBundle:Admin:standard_layout.html.twig' %}


{% block content %}
    <a class="btn btn-sm btn-default edit_link" title="Retour" href="{{ path('sonata_admin_dashboard') }}">
        <i class="glyphicon glyphicon-edit"></i>
        Retour
    </a>

    <h3><i class="fa fa-cutlery">&nbsp;</i>Pour facturation mensuelle</h3>

    <form method="POST" action="{{ path('stat') }}" name="form_months">

        <select id="month_selected" name="month_selected" title="SÃ©lection du mois de facturation">
            {% for month in list_months %}
            <option value="{{ month|date('Y-m') }}" {{ month_selected == month|date('Y-m') ? 'selected = "selected" ':'' }}>{{ month|date('m/Y') }}</option>
            {% endfor %}
        </select>

    </form>

    <table id="userTable" class="table table-hover tablesorter table-bordered">
        <thead>
         <tr class="success">
            <th>Nom</th>
            <th>Prenom</th>
            <th>Classe</th>
            <th>Tap/Garderie</th>
            <th>Cantine</th>
         </tr>

        </thead>

        <tbody>
        {% for eleve in eleves %}
        <tr>
            <td>{{ eleve['eleve_nom'] | upper }}</td>
            <td>{{ eleve['eleve_prenom'] }}</td>
            <td>{{ eleve['division'] }}</td>
            <td>{{ eleve['total_tapgarderie'] }}</td>
            <td>{{ eleve['total_cantine'] }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    <script>
        window.addEventListener('load', function() {


            document.getElementById('month_selected').addEventListener('change', function() {
                document.forms['form_months'].submit();
            });

        });
    </script>
{% endblock %}
