{% extends '::base.html.twig' %}

{% block body %}
    <h1>Liste des élèves</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de naissance</th>
                <th>Etablissement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{% if entity.dateDeNaissance %}{{ entity.dateDeNaissance|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.idFoyer }}</td>
                <td>{{ entity.idEtablissement }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('eleve_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('eleve_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eleve_new') }}">
                Créer un nouvel élève
            </a>
        </li>
    </ul>
    {% endblock %}
